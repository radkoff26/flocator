<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="@string/settings"
            app:titleTextColor="#1515B9"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            />
        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="ru.flocator.app.ru.flocator.feature_settings.ui.SettingsFragment"
            android:paddingHorizontal="20dp"
            android:paddingTop="8dp"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/settings_rectangle"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:background="#0000"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/settings_circle"
                    android:contentDescription="@string/own_profile"/>
                <EditText
                    android:focusableInTouchMode="true"
                    android:id="@+id/name_field"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:autofillHints="name"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="16dp"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:inputType="text"
                    android:background="@null"
                    android:hint="@string/your_nickname"
                    />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date_of_birth_line"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_of_birth"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/date_of_birth_field"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/date_of_birth_mock"
                    android:textColor="#5c5c5c"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/blacklist_line"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/black_list"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />

        <TextView
            android:id="@+id/blacklist_cnt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/blacklist_cnt_mock"
            android:textColor="#5c5c5c"
            />
    </LinearLayout>
            <LinearLayout
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/privacy_line">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/change_password_line"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_pass"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/exit_account_line"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_out"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/delete_account_line"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_account"
                    android:textStyle="bold"
                    android:textColor="#F00"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>